{
  "include": ["src/*"],
  "exclude": ["src/__*"],
  "compilerOptions": {
    "outDir": "lib",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "declaration": true,

    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "maxNodeModuleJsDepth": 2
  }
}
